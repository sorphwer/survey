<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/q3_title"
        android:textColor="@color/colorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:text="@string/q3_title"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:text="@string/q3_content"></TextView>
    <RadioGroup
        android:id="@+id/q3_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="100sp">

        <RadioButton
            android:id="@+id/q3_group_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2G"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:id="@+id/q3_group_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3G"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:id="@+id/q3_group_b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:id="@+id/q3_group_b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textSize="20sp"></RadioButton>

    </RadioGroup>
    <Button
        android:id="@+id/q3_button"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/wel_li_3"
        android:layout_marginTop="140sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="NEXT"
        android:textSize="20sp"></Button>


    <!-- END    : Your code should be within this block -->

</LinearLayout>
