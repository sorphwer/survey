<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/q8_title"
        android:textColor="@color/colorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:text="@string/q8_title"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:text="@string/q8_content"></TextView>
    <RadioGroup
        android:id="@+id/q8_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="50sp">


        <RadioButton
            android:id="@+id/q8_group_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iphone"

            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nokia"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samsung"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lenovo"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sony"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
        <RadioButton
            android:id="@+id/q8_group_b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:layout_marginTop="10sp"
            android:textSize="18sp"></RadioButton>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/q8_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginLeft="25sp"

            android:layout_marginRight="25sp"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="NEXT"

            android:textSize="20sp"></Button>
    </RelativeLayout>
    <!-- END    : Your code should be within this block -->

</LinearLayout>
