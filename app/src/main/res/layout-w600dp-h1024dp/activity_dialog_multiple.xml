<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DialogMultipleActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="6dp"
        android:text="@string/newMulti"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/dialog_multiple_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/fillinHint"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/dialog_multiple_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/optionshint"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_margin="10dp">
        <Button
            android:id="@+id/dialog_single_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="#99008577"
            android:onClick="onClick_multi_confirm"></Button>
        <Button
            android:layout_marginLeft="90dp"
            android:id="@+id/dialog_single_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancle"
            android:background="#99008577"
            android:onClick="onClick_multi_cancel"></Button>
    </LinearLayout>


</LinearLayout>