<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="200dp"
    tools:context=".DialogFillinActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="6dp"
        android:text="@string/newFillin"></TextView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/dialog_fillin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fillinHint"></EditText>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/dialog_fillin_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="#99008577"
            android:onClick="onClick_fillin_confirm"></Button>

        <Button
            android:id="@+id/dialog_fillin_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_fillin_cancel"
            android:text="@string/cancle"
            android:background="#99008577"
            android:layout_marginLeft="40dp"></Button>
    </LinearLayout>



</LinearLayout>